<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- 50% 分割线（Guideline） -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- 中间竖线 -->
    <View
        android:id="@+id/v_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#22000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide_mid"
        app:layout_constraintEnd_toEndOf="@id/guide_mid" />

    <!-- ===================== 左侧：蓝牙搜索 ===================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panel_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_divider">

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="蓝牙搜索"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ✅ 搜索框：过滤设备 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_device_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_left_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="outline"
            android:hint="搜索设备（名称/地址）"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_device_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </com.google.android.material.textfield.TextInputLayout>



        <!-- 连接状态 -->
        <TextView
            android:id="@+id/tv_ble_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="状态：未连接"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/til_device_filter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 顶部按钮栏：扫描 / 清空 -->
        <Button
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="开始扫描"
            app:layout_constraintTop_toBottomOf="@id/tv_ble_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_clear"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintWidth_percent="0.48" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="断开连接"
            app:layout_constraintTop_toTopOf="@id/btn_scan"
            app:layout_constraintStart_toEndOf="@id/btn_scan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48" />

        <!-- 设备列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_devices"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:overScrollMode="ifContentScrolls"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/btn_scan"
            app:layout_constraintBottom_toTopOf="@id/tv_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 底部提示 -->
        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="提示：点击列表项连接（后面我们在 Adapter 里处理）"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===================== 右侧：预留区域 ===================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panel_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_divider"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="设备详情 / 日志（预留）"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_hex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_right_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="outline"
            android:hint="HEX（例：01 或 010203 或 01 02 03）">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_hex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="text"
                android:text="01" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="发送"
            app:layout_constraintTop_toBottomOf="@id/til_hex"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_send_loop"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="循环发送"
            app:layout_constraintTop_toBottomOf="@id/btn_send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_clear_log"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="清空日志"
            app:layout_constraintTop_toBottomOf="@id/btn_send_loop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_send_log"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:text="发送日志：\n"
            android:textColor="#777777"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/btn_clear_log"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
